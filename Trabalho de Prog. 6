#include <stdio.h>

int main(void) {
  int count = 0;
  float temp, media = 0;
  do{
    printf("Digite o valor da temperatura no %iº dia: ", count+1);
    scanf("%f", &temp);
    if(temp >= -15 && temp <= 5){
      count++;
      media = media + temp;
    }
  }while(temp >= -15 && temp <=5);
  printf("\nEncontrado valor de encerramento.\n");
  media = media / count;
  printf("A média das temperaturas foi de %.2fºC.", media);
  return 0;
}
